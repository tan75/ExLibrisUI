{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "no-unused-vars": "warn",
    "react/jsx-filename-extension": 0,
    "prettier/prettier": "error",
    "func-names":"off",
    "no-process-exit":"off",
    "object-shorthand":"off",
    "class-methods-use-this": "off" 
  }
}